# Railway PostgreSQL - Otomatik olarak sağlanır
DATABASE_URL=

# Redis (Opsiyonel) - Railway Redis eklentisi eklerseniz
REDIS_CONNECTION_STRING=

# Cloudflare KV
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_KV_NAMESPACE_ID=your-kv-namespace-id
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token

# SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=YourAppName

# Twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_NUMBER=+1234567890

# Security
ENCRYPTION_KEY=your-32-character-encryption-key-here

# ASP.NET Core
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=http://+:$PORT

# Firebase (Opsiyonel - Push bildirimler için)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_SERVICE_ACCOUNT_JSON={"type": "service_account", ...}

# OpenTelemetry (Opsiyonel - Monitoring için)
OTEL_EXPORTER_OTLP_ENDPOINT=https://your-otel-collector.com
OTEL_EXPORTER_OTLP_HEADERS=api-key=your-api-key

# Feature Flags (Opsiyonel)
FEATUREFLAGS__EMAILVERIFICATION=true
FEATUREFLAGS__SMSVERIFICATION=false