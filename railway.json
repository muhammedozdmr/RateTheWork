{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE"
  },
  "deploy": {
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "env": {
    "DOTNET_RUNNING_IN_CONTAINER": "true",
    "DOTNET_SYSTEM_GLOBALIZATION_INVARIANT": "false"
  }
}